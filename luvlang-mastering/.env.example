# ============================================
# LUVLANG MASTERING - ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# ============================================

# Server
NODE_ENV=development
PORT=3001

# CORS - comma-separated allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_STUDIO_MONTHLY=price_xxx
STRIPE_PRICE_STUDIO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# Security - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY_SECRET=change-me-to-random-32-char-string
JWT_SECRET=change-me-to-random-32-char-string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
