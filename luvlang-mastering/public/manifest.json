{
    "name": "LuvLang Mastering",
    "short_name": "LuvLang",
    "description": "Professional AI-powered audio mastering in your browser",
    "start_url": "/",
    "display": "standalone",
    "orientation": "any",
    "background_color": "#0a0a0f",
    "theme_color": "#00d4ff",
    "categories": ["music", "entertainment", "productivity"],
