        },
        {
            "src": "/icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshots/desktop-main.png",
            "sizes": "1920x1080",
            "type": "image/png",
            "form_factor": "wide",
            "label": "LuvLang Mastering - Desktop View"
        },
        {
            "src": "/screenshots/mobile-main.png",
            "sizes": "390x844",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "LuvLang Mastering - Mobile View"
        }
    ],
    "shortcuts": [
        {
            "name": "Quick Master",
            "short_name": "Master",
            "description": "Upload and master a track",
            "url": "/?mode=quick",
            "icons": [{ "src": "/icons/shortcut-master.png", "sizes": "96x96" }]
        },
        {
            "name": "Podcast Mode",
            "short_name": "Podcast",
            "description": "Master podcast audio",
            "url": "/?mode=podcast",
            "icons": [{ "src": "/icons/shortcut-podcast.png", "sizes": "96x96" }]
        },
        {
            "name": "Batch Processing",
            "short_name": "Batch",
            "description": "Process multiple files",
            "url": "/?mode=batch",
            "icons": [{ "src": "/icons/shortcut-batch.png", "sizes": "96x96" }]
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "audio/wav": [".wav"],
                "audio/mpeg": [".mp3"],
                "audio/flac": [".flac"],
                "audio/aiff": [".aiff", ".aif"],
                "audio/ogg": [".ogg"],
                "audio/x-m4a": [".m4a"]
            }
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "files": [
                {
                    "name": "audio",
                    "accept": ["audio/*"]
                }
            ]
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+luvlang",
            "url": "/?protocol=%s"
        }
    ],
    "related_applications": [],
    "prefer_related_applications": false
}
